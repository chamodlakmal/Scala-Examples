
object One {
  def main(args:Array[String])
  {
    var x="chamod";
    var length=x.length();
    var vowelCount=0;
    println("Length of the string : "+length)
    for(i<-0 to length)
    {
      if(x.charAt(i)=='a'||x.charAt(i)=='e'||x.charAt(i)=='i'||x.charAt(i)=='o'||x.charAt(i)=='u')
      {
        vowelCount+=1;
      }
    }
    println(vowelCount);
  }
}